#!/usr/bin/env ruby

require "bundler/setup"
require "rbots"

require "rbots/plugin/pry"
require "rbots/data_store/redis"
require "rbots/plugin/no_deploy"

class Bot < Hipbot::Bot
  configure do |c|
    c.jid       = ENV["RBOT_JID"]
    c.password  = ENV["RBOT_PASSWORD"]
    c.storage = Rbots::DataStore::Redis
    c.join = :none
  end
end

Bot.start!
